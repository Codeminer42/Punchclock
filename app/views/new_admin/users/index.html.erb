<% content_for :page_title do %>
  <%= User.model_name.human(count: 2) %>
<% end %>

<div data-tab-id="users" class="overflow-hidden rounded-lg ring-1 ring-black ring-opacity-5">
  <div class="flex justify-between gap-4 flax-wrap">
    <div class="grow">
      <% if @users.any? %>
        <%= render 'users_table', users: @users %>
      <% else %>
        <h3 class="text-xs font-semibold text-left uppercase dark:text-gray-400">
          <%= t('users.empty') %>
        </h3>
      <% end %>
    </div>
        <div id="filters_sidebar_section">
      <%= render 'users_filter' %>
    </div>
  </div>
</div>
