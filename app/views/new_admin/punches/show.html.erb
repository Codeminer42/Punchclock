<% content_for :page_title do %>
  <%= "#{@punch.from} - #{@punch.to}" %>
<% end %>


<div data-tab-id="punch" class="w-full overflow-hidden rounded-lg ring-1 ring-black ring-opacity-5">
  <div class="w-full overflow-x-auto">
    <table class="w-full whitespace-no-wrap">
      <thead>
        <tr class="text-xs font-semibold tracking-wide text-left text-gray-500 uppercase border-b dark:border-gray-700 bg-gray-50 dark:text-white dark:bg-slate-700">
          <th colspan="100%" class="px-4 py-3"><%= t 'punch_details' %></th>
        </tr>
      </thead>

      <tbody class="bg-white divide-y dark:divide-gray-700 dark:bg-gray-800">
        <tr class="text-gray-700 dark:text-gray-300">
          <th class="w-1/12">
            <div class="ml-3 text-xs font-semibold tracking-wide text-left text-gray-500 uppercase ">
              <%= Punch.human_attribute_name('user') %>
            </div>
          </th>
          <td class="px-4 py-3">
            <div class="flex items-center text-sm">
              <p class="text-sm text-gray-600 dark:text-gray-400 font-semibold">
                <%= @punch.user_name %>
              </p>
            </div>
          </td>
        </tr>
        <tr class="text-gray-700 dark:text-gray-300">
          <th class="w-1/12">
            <div class="ml-3 text-xs font-semibold tracking-wide text-left text-gray-500 uppercase ">
              <%= Punch.human_attribute_name('project') %>
            </div>
          </th>
          <td class="px-4 py-3">
            <div class="flex items-center text-sm">
              <p class="text-sm text-gray-600 dark:text-gray-400 font-semibold">
                <%= @punch.project_name %>
              </p>
            </div>
          </td>
        </tr>
        <tr class="text-gray-700 dark:text-gray-300">
          <th class="w-1/12">
            <div class="ml-3 text-xs font-semibold tracking-wide text-left text-gray-500 uppercase ">
              <%= Punch.human_attribute_name('when') %>
            </div>
          </th>
          <td class="px-4 py-3">
            <div class="flex items-center text-sm">
              <p class="text-sm text-gray-600 dark:text-gray-400 font-semibold">
                <%= @punch.date %>
              </p>
            </div>
          </td>
        </tr>
        <tr class="text-gray-700 dark:text-gray-300">
          <th class="w-1/12">
            <div class="ml-3 text-xs font-semibold tracking-wide text-left text-gray-500 uppercase ">
              <%= Punch.human_attribute_name('from') %>
            </div>
          </th>
          <td class="px-4 py-3">
            <div class="flex items-center text-sm">
              <p class="text-sm text-gray-600 dark:text-gray-400 font-semibold">
                <%= @punch.from %>
              </p>
            </div>
          </td>
        </tr>
        <tr class="text-gray-700 dark:text-gray-300">
          <th class="w-1/12">
            <div class="ml-3 text-xs font-semibold tracking-wide text-left text-gray-500 uppercase ">
              <%= Punch.human_attribute_name('to') %>
            </div>
          </th>
          <td class="px-4 py-3">
            <div class="flex items-center text-sm">
              <p class="text-sm text-gray-600 dark:text-gray-400 font-semibold">
                <%= @punch.to %>
              </p>
            </div>
          </td>
        </tr>
        <tr class="text-gray-700 dark:text-gray-300">
          <th class="w-1/12">
            <div class="ml-3 text-xs font-semibold tracking-wide text-left text-gray-500 uppercase ">
              <%= Punch.human_attribute_name('delta') %>
            </div>
          </th>
          <td class="px-4 py-3">
            <div class="flex items-center text-sm">
              <p class="text-sm text-gray-600 dark:text-gray-400 font-semibold">
                <%= @punch.delta %>
              </p>
            </div>
          </td>
        </tr>
        <tr class="text-gray-700 dark:text-gray-300">
          <th class="w-1/12">
            <div class="ml-3 text-xs font-semibold tracking-wide text-left text-gray-500 uppercase ">
              <%= Punch.human_attribute_name('extra_hour') %>
            </div>
          </th>
          <td class="px-4 py-3">
            <div class="flex items-center text-sm">
              <p class="text-sm text-gray-600 dark:text-gray-400 font-semibold">
                <%= t(@punch.extra_hour.to_s)  %>
              </p>
            </div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
