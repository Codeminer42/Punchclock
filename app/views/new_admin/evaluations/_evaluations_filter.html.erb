<div class="px-4 py-3 w-fit h-fit dark:bg-gray-800"> 
  <h3 class="text-xs py-1 font-semibold tracking-wide text-left uppercase border-b dark:border-gray-700 dark:text-gray-400 dark:bg-gray-800">
    <%= 'Filtros' %>
  </h3>
  <%= form_with url: new_admin_evaluations_url, method: :get do |form| %>
    <div class="mt-2 space-y-2">
      <div class="flex flex-col space-y-2">
        <%= form.label :evaluator, class: "text-xs font-semibold tracking-wide text-left text-gray-500 uppercase"  %>
        <%= form.collection_select :evaluator_id, User.active.order(:name), :id, :name, { prompt: 'Qualquer', include_blank: true, selected: params[:evaluator_id] }, { class: 'w-full font-semibold rounded-lg text-sm dark:bg-slate-700 dark:text-gray-400' } %>
      </div>
      <div class="flex flex-col space-y-2">
        <%= form.label :evaluated, class: "text-xs font-semibold tracking-wide text-left text-gray-500 uppercase"  %>
        <%= form.collection_select :evaluated_id, User.active.order(:name), :id, :name, { prompt: 'Qualquer', include_blank: true, selected: params[:evaluated_id] }, { class: 'w-full font-semibold rounded-lg text-sm dark:bg-slate-700 dark:text-gray-400' } %>
      </div>
      <div class="flex flex-col space-y-2">
        <%= form.label :questionnaire_type, class: "text-xs font-semibold tracking-wide text-left text-gray-500 uppercase"  %>
        <%= form.select :questionnaire_type, Questionnaire.kind.values.map { |kind| [kind.text.titleize, kind.value] }, { prompt: 'Qualquer', include_blank: true, selected: params[:questionnaire_type] }, { class: 'w-full font-semibold rounded-lg text-sm dark:bg-slate-700 dark:text-gray-400' } %>
      </div>
    </div>
    <div class="mt-2 space-y-2">
      <%= form.label :created_at, class: "text-xs font-semibold tracking-wide text-left text-gray-500 uppercase" %>
      <div class="flex flex-row">
        <%= form.date_field :created_at_start, value: params[:created_at_start], class: "mr-2 bg-gray-100 font-semibold rounded-lg text-gray-600 text-sm dark:bg-slate-700 dark:text-gray-400" %>
        <%= form.date_field :created_at_end, value: params[:created_at_end], class: "bg-gray-100 font-semibold rounded-lg text-gray-600 text-sm dark:bg-slate-700 dark:text-gray-400" %>
      </div>
    </div>
    <div class="mt-2 space-y-2">
      <%= form.label :evaluation_date, class: "text-xs font-semibold tracking-wide text-left text-gray-500 uppercase" %>
      <div class="flex flex-row">
        <%= form.date_field :evaluation_date_start, value: params[:evaluation_date_start], class: "mr-2 bg-gray-100 font-semibold rounded-lg text-gray-600 text-sm dark:bg-slate-700 dark:text-gray-400" %>
        <%= form.date_field :evaluation_date_end, value: params[:evaluation_date_end], class: "bg-gray-100 font-semibold rounded-lg text-gray-600 text-sm dark:bg-slate-700 dark:text-gray-400" %>
      </div>
    </div>
    <div class="mt-4 mb-2">
      <div class="flex flex-row">
        <%= form.submit 'Filtrar', formmethod: :get, class: "px-4 py-2 mr-2 cursor-pointer font-semibold text-sm text-white transition-colors duration-150 rounded-lg bg-primary-600 hover:bg-primary-700" %>
        <%= link_to 'Limpar filtros', new_admin_evaluations_url, class: "px-4 py-2 cursor-pointer font-semibold text-sm text-white transition-colors duration-150 rounded-lg bg-slate-700 hover:bg-gray-600" %> 
      </div>
    </div>
  <% end %>
</div>
