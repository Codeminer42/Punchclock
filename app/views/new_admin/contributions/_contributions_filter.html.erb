<div class="px-4 py-3 w-fit h-fit dark:bg-gray-800"> 
  <h3 class="text-xs py-1 font-semibold tracking-wide text-left uppercase border-b dark:border-gray-700 dark:text-gray-400 dark:bg-gray-800">
    <%= t('questionnaires.filters') %>
  </h3>
  <%= form_with url: new_admin_questionnaires_url, method: :get do |form| %>
    <div class="mt-2 space-y-2">
      <div class="flex flex-col space-y-2">
        <%= form.label :title, Questionnaire.human_attribute_name(:title), class: "text-xs font-semibold tracking-wide text-left text-gray-500 uppercase"  %>
        <%= form.text_field :title, class: 'w-full font-semibold rounded-lg text-sm dark:bg-slate-700 dark:text-gray-400' %>
      </div>
      <div class="flex flex-col space-y-2">
        <%= form.label :type, Questionnaire.human_attribute_name(:kind), class: "text-xs font-semibold tracking-wide text-left text-gray-500 uppercase"  %>
        <%= form.select :type, Questionnaire.kind.values.map { |kind| [kind.text.titleize, kind.value] }, { prompt: t('prompt'), selected: params[:type] }, { class: 'w-full font-semibold rounded-lg text-sm dark:bg-slate-700 dark:text-gray-400' } %>
      </div>
    </div>
    <div class="mt-2 space-y-2">
      <%= form.label :created_at, Questionnaire.human_attribute_name(:created_at), class: "text-xs font-semibold tracking-wide text-left text-gray-500 uppercase" %>
      <div class="flex flex-row">
        <%= form.date_field :created_at_from, value: params[:created_at_from], class: "mr-2 bg-gray-100 font-semibold rounded-lg text-gray-600 text-sm dark:bg-slate-700 dark:text-gray-400" %>
        <%= form.date_field :created_at_until, value: params[:created_at_until], class: "bg-gray-100 font-semibold rounded-lg text-gray-600 text-sm dark:bg-slate-700 dark:text-gray-400" %>
      </div>
    </div>
    <div class="mt-2 space-y-2">
      <div class="flex flex-col space-y-2">
        <%= form.label :active, Questionnaire.human_attribute_name(:active),
                        class: 'text-xs font-semibold tracking-wide text-left text-gray-500 uppercase' %>
        <%= form.check_box :active, {}, true, false %>
      </div>
    </div>
    <div class="mt-4 mb-2">
      <div class="flex flex-row">
        <%= form.submit t('questionnaires.filter'), formmethod: :get, class: "px-4 py-2 mr-2 cursor-pointer font-semibold text-sm text-white transition-colors duration-150 rounded-lg bg-primary-600 hover:bg-primary-700" %>
        <%= link_to t('questionnaires.clear'), new_admin_questionnaires_url, class: "px-4 py-2 cursor-pointer font-semibold text-sm text-white transition-colors duration-150 rounded-lg bg-slate-700 hover:bg-gray-600" %> 
      </div>
    </div>
  <% end %>
</div>
