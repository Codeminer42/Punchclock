<% content_for :page_title do %>
  <%= Questionnaire.model_name.human(count: 2) %>
<% end %>

<div data-tab-id="questionnaires" class="overflow-hidden rounded-lg ring-1 ring-black ring-opacity-5">
  <div class="flex justify-between gap-4 flax-wrap">
    <div class="grow">
      <% if @questionnaires.any? %>
        <%= render 'questionnaires_table', questionnaires: @questionnaires %>
      <% else %>
        <h3 class="text-xs font-semibold text-left uppercase dark:text-gray-400">
          <%= t('questionnaires.empty') %>
        </h3>
      <% end %>
    </div>
    <div id="filters_sidebar_section">
      <%= render 'questionnaires_filter' %>
    </div> 
  </div>
</div>
