<%= form_with model: project, url: url do |form| %>
  <div class="w-full overflow-hidden rounded-lg ring-1 ring-black ring-opacity-5">
    <div class="w-full overflow-x-auto">
      <table class="w-full whitespace-no-wrap" id="form_project">
        <thead>
        <tr class="text-xs font-semibold tracking-wide text-left text-gray-500 uppercase border-b dark:border-gray-700 bg-gray-50 dark:text-white dark:bg-slate-700">
          <th colspan="100%" class="px-4 py-3"><%= t 'projects.title' %></th>
        </tr>
        </thead>

        <tbody class="bg-white divide-y dark:divide-gray-700 dark:bg-gray-800">
        <tr class="text-gray-700 dark:text-gray-300">
          <th class="w-1/12">
            <div class="ml-3 text-xs font-semibold tracking-wide text-left text-gray-500 uppercase ">
              <%= Project.human_attribute_name('name') %>
            </div>
          </th>
          <td class="px-4 py-3">
            <div class="flex items-center">
              <%= form.text_field :name, class: "bg-gray-100 font-semibold rounded-lg text-gray-600 dark:text-gray-400 h-8 dark:bg-slate-700" %>
            </div>
          </td>
        </tr>

        <tr class="text-gray-700 dark:text-gray-300">
          <th class="w-1/12">
            <div class="ml-3 text-xs font-semibold tracking-wide text-left text-gray-500 uppercase ">
              <%= Project.human_attribute_name('market') %>
            </div>
          </th>
          <td class="px-4 py-3">
            <div class="flex items-center">
              <%= form.select :market,
                              market_options_for_select,
                              { selected: project&.object&.market, prompt: t('prompt') },
                              { class: "bg-gray-100 font-semibold rounded-lg text-gray-600 dark:text-gray-400 h-10 dark:bg-slate-700" }
              %>
            </div>
          </td>
        </tr>

        <tr class="text-gray-700 dark:text-gray-300">
          <th class="w-1/12">
            <div class="ml-3 text-xs font-semibold tracking-wide text-left text-gray-500 uppercase ">
              <%= Project.human_attribute_name('active') %>
            </div>
          </th>
          <td class="px-4 py-3">
            <div class="flex items-center">
              <%= form.check_box :active, { checked: project.active? }, 'true', 'false' %>
            </div>
          </td>
        </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="flex mt-4">
    <%= form.submit t('form.button.submit'), class: "px-4 py-2 cursor-pointer font-semibold text-sm text-white transition-colors duration-150 rounded-lg bg-primary-600 hover:bg-primary-700" %>
  </div>
<% end %>
