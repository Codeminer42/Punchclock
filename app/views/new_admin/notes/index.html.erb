<% content_for :page_title do %>
  <%= Note.model_name.human %>
<% end %>

<div data-tab-id="notes" class="overflow-hidden rounded-lg ring-1 ring-black ring-opacity-5">
  <div class="flex justify-between gap-4">
    <% if @notes.any? %>
      <%= render 'notes_table', notes: @notes %>
    <% else %>
      <h3 class="text-xs font-semibold text-left uppercase dark:text-gray-400">
        <%= t('notes.empty') %>
      </h3>
    <% end %>
  </div>
</div>
