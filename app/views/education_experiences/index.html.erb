<div id="page-top" class="row">
  <div class="container-fluid home">
    <div class="card mb-3">
      <div class="card-header">
        <i class="fa fa-table"></i>
        <%= t('activerecord.models.education_experience.other') %>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-hover table-bordered users-evaluation" id="dataTable">
            <thead>
              <tr>
                <th><%= t('activerecord.attributes.education_experience.institution') %></th>
                <th><%= t('activerecord.attributes.education_experience.course') %></th>
                <th><%= t('activerecord.attributes.education_experience.start_date') %></th>
                <th><%= t('activerecord.attributes.education_experience.end_date') %></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% if @education_experiences.empty?  %>
                <tr>
                  <td colspan="4"><%= t('resumes.education_experience.not_found') %></td>
                </tr>
              <% end %>
              <% @education_experiences.each do |experience| %>
                <tr>
                  <td><%= experience.institution %></td>
                  <td><%= experience.course %></td>
                  <td><%= experience.decorate.start_date %></td>
                  <td><%= experience.decorate.end_date %></td>
                  <td>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<section>
  <%= paginate  @education_experiences %>
</section>
