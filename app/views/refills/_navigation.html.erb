<header>
  <div class="topnav" id="myTopnav">
    <% if user_signed_in? %>
      <span class="nav-brand"><%= link_to raw("Punchclock <small>#{current_user.company.name}</small>"), root_path %></span>
      <div class="links">
        <%= link_to dashboard_index_path do %>
              <%= t('.dashboard') %>
              <span class="beta">Beta</span>
        <%- end %>
        <%= link_to Punch.model_name.human.pluralize, punches_path %>
        <%= link_to User.model_name.human.pluralize, users_path %>
        <%= link_to t('evaluation.plural'), kind_evaluations_path(Evaluation::KINDS[:received]) %>
        <span class="account-options">
          <%= link_to current_user.email, edit_user_path(current_user) %>
          <%= link_to t('.logout'), destroy_user_session_path, method: :delete %> 
        </span>
      </div>
      <a class="icon" id="menu-icon">&#9776;</a>
    <% end %>
  </div>
</header>