<header class="navigation">
  <div class="menu-wrapper">
    <p class="navigation-menu-button" id="js-mobile-menu">MENU</p>
    <div class="nav">
      <% if user_signed_in? %>
        <ul id="navigation-menu">
          <li>
            <%= link_to "Punchclock - #{current_user.company.name}", root_path, class: "navbar-brand" %>
          </li>
          <li>
            <%= link_to dashboard_index_path do %>
              <%= t('.dashboard') %>
              <span class="experimental">Experimental</span>
            <%- end %>
          </li>
          <li><%= link_to Punch.model_name.human.pluralize, punches_path %></li>
          <li><%= link_to User.model_name.human.pluralize, users_path %></li>
          <li class="account">
            <%= link_to current_user.email, edit_user_path(current_user) %>
            <%= link_to t('.logout'), destroy_user_session_path, method: :delete %>
          </li>
        </ul>
      <% end %>
    </div>
  </div>
</header>
