<!DOCTYPE html>
<html>
<head>
  <title>Punchclock</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="page">

    <nav class="navbar navbar-default" role="navigation">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle"
                data-toggle="collapse" data-target=".navbar-ex1-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="<%= root_path %>">Punchclock</a>
      </div>
      <ul class="nav navbar-nav navbar-right">
        <%- if user_signed_in? -%>
        <li>
          <p class="navbar-text">
            Welcome,
            <strong><%= current_user.name %></strong>
          </p>
        </li>
        <li><%= link_to 'Logout', home_logout_path %></li>
        <%- else -%>
        <li>
          <%= link_to 'Login', user_omniauth_authorize_path(:google_apps) %>
        </li>
        <%- end -%>
      </ul>
    </nav>

<!--
    <div class="page-header">
      <div class="page-header-1">
        <h1><%= link_to 'PUNCHCLOCK', root_path %></h1>
      </div>
      <div class="page-header-2">
        <div id="user_nav" align="right">
          <%- if user_signed_in? -%>
          Welcome,
          <strong><%= current_user.name %></strong>
          <%= link_to 'Logout', home_logout_path %>
          <%- else -%>
          <%= link_to 'Login', user_omniauth_authorize_path(:google_apps) %>
          <%- end -%>
        </div>
      </div>
      <br style="clear:both"/>
    </div>
 -->
    <div class="page-body">
      <%- if notice.present? || alert.present? -%>
      <div class="flash-messages">
        <%- if notice.present? -%>
        <p class="alert alert-info"><%= notice %></p>
        <%- end -%>
        <%- if alert.present? -%>
        <p class="alert alert-danger"><%= alert %></p>
        <%- end -%>
      </div>
      <%- end -%>
      <%= yield %>
    </div>
  </div>
</body>
</html>
