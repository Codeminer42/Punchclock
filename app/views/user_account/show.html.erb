<%= form_for(current_user) do |f| %>
	<table border="0" cellspacing="8" cellpadding="8">
		<tr>
			<th><%= f.label :name, current_user.name %></th>
		</tr>
		<tr>
			<th><%= f.label :email, current_user.email %></th>
		</tr>
    <tr>
      <td colspan="2">
        <%= link_to 'Back', punches_path, class: 'btn btn-primary' %>
        <%= link_to 'Change Information', edit_user_path(current_user), class: 'btn btn-default' %>
      </td>
    </tr>
	</table>
<% end %>