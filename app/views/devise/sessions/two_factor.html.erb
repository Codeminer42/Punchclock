<div class="access-form-container mt-2">
  <h2 class="text-center mb-3">
    <%= t("form.title.verify_your_identity") %>
  </h2>

  <%= simple_form_for(resource,
                      as: resource_name,
                      url: session_path(resource_name),
                      html: { novalidate: false },
                      method: :post) do |f| %>

    <div class="input-group">
      <div class="input-group-prepend">
        <span class="input-group-text">
          <i class="fa fa-lock"></i>
        </span>
      </div>
      <%= f.input_field :otp_attempt,
                label: false,
                required: true,
                autofocus: true,
                placeholder: t("form.field.authentication_code"),
                class: "form-control" %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, t("form.button.verify"), class: "w-100" %>
    </div>

    <div><%= t("form.hint.authentication_code") %></div>

  <% end %>

  <%= link_to t("form.links.return_to_sign_in"), :back %>
</div>
