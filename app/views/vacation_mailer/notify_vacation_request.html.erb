<h1><%= t '.info', user: @vacation.user.name %></h1>

<p><%= t '.start_date', date: l(@vacation.start_date) %></p>
<p><%= t '.end_date', date: l(@vacation.end_date) %></p>
<p><%= t '.count', count: (@vacation.end_date - @vacation.start_date).to_i %></p>

<h2><%= t('.call_to_action_text') %></h2>
<div style="display: flex">
  <div style="margin-right: 10px">
    <%=
      button_to t('.approve_button'),
      {
        :controller => :vacations,
        :action => 'approve',
        :id => @vacation.id
      },
      :method => :put
    %>
  </div>

  <div>
    <%=
      button_to t('.deny_button'),
      {
        :controller => :vacations,
        :action => 'deny',
        :id => @vacation.id
      },
      :method => :delete
    %>
  </div>
</div>
</ul>
