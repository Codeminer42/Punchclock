<%= nested_form_for(@punch) do |f| %>
  <% if @punch.errors.any? %>
    <div class="alert alert-danger" id="error_explanation">
      <h2><%= pluralize(@punch.errors.count, "error") %> prohibited this punch from being saved:</h2>

      <ul>
      <% @punch.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <table border="0" cellspacing="8" cellpadding="8" class="punch-form-table">
    <tr>
      <th><label>From</label></th>
      <td>
        <input type="text" size="2" name="punch[from(4i)]" class="spinner-hr"
               value="<%= @punch.from.present? ?
               l(@punch.from, :format => '%H') : '0' %>" /> :
        <input type="text" size="2" name="punch[from(5i)]" class="spinner-mn"
               value="<%= @punch.from.present? ?
               l(@punch.from, :format => '%M') : '0' %>"/>
      </td>
      <th><label>To</label></th>
      <td>
        <input type="text" size="2" name="punch[to(4i)]" class="spinner-hr"
               value="<%= @punch.to.present? ?
               l(@punch.to, :format => '%H') : '0' %>"/> :
        <input type="text" size="2" name="punch[to(5i)]" class="spinner-mn"
               value="<%= @punch.to.present? ?
               l(@punch.to, :format => '%M') : '0' %>"/>
      </td>
    </tr>
    <tr>
      <th><label>When</label></th>
      <td colspan="3">
        <input class="datepicker" name="when_day" size="10"
               value="<%= @punch.from.present? ?
               l(@punch.from, format: '%Y-%m-%d') : "#{Time.now.strftime("%Y-%m-%d")}" %>"/>
        <%= image_tag 'calendar.png' %>
      </td>
    </tr>
    <tr>
      <th><%= f.label :project_id, 'On' %></th>
      <td colspan="3">
        <%= f.collection_select :project_id, @projects.order(:name), :id, :name,
                                {}, { class: 'form-control' } %>
      </td>
    </tr>
    <tr>
      <th><%= f.label :attachment, 'Anexo' %></th>
      <td colspan="3">
        <%= f.file_field :attachment %>
        <%= f.hidden_field :attachment_cache %>
        <p>
          <%= f.check_box :remove_attachment %>
          <%= f.label :remove_attachment, 'remove' %>
        </p>
        <p>
          <%= image_tag @punch.attachment_url, width: 250, height: 250 if @punch.attachment? %>
        </p>
      </td>
    </tr>
    <tr>
      <th>Comments</th>
      <td colspan="3">
        <%= f.fields_for :comment, include_id: true do |comment_form| %>
            <%= comment_form.text_area :text %>
        <% end %>
      </td>
    </tr>
    <tr>
      <td colspan="2">
        <%= link_to 'Cancel', punches_path, class: 'btn btn-danger' %>
      </td>
      <td colspan="2">
        <div class="actions">
          <%= f.submit(nil, { class: 'btn btn-default' }) %>
        </div>
      </td>
    </tr>
  </table>
<% end %>
