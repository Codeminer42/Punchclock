<%= simple_form_for @punches_filter_form, url: punches_path, method: :get, html: { class: 'form-inline' } do |f| %>
  <%= f.input :since, as: :datepicker, label: false, placeholder: true %>
  <%= f.input :until, as: :datepicker, label: false, placeholder: true  %>
  <%= f.input :project_id, collection: current_user.company.projects.order(:name), include_blank: :translate, label: false %>
  <% if current_user.is_admin? %>
    <%= f.input :user_id, collection: current_user.company.users.order(:name), include_blank: :translate, label: false %>
  <% end %>
  <%= f.submit class: 'btn btn-default' %>
<% end %>

