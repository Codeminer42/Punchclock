<% @users.each do |u| %>
    <%= gravatar_for(u) %>
    <%= link_to "#{u.name}", current_user.is_admin? ? edit_user_path(u) : user_path(u) %>
    <br>
    Email: <%= u.email %>
    <br>
    Role: <%= u.role %>
    <br>
    Administrator: <%= "#{u.is_admin? ? 'yes' : 'no'}" %>
    <br>
    <% if current_user.is_admin? %>
      Cost: <%= "#{u.hour_cost} R$/h" %>
      <%= render 'users/shared/options', user: u %>
    <% end %>
<% end %>
