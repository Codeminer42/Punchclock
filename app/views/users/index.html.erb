<% @users.each do |user| %>
  <%= gravatar_for(user) %>
  <%= link_to user.name, current_user.is_admin? ? edit_user_path(user) : user_path(user) %>
  <br />
  Email: <%= user.email %>
  <br />
  Role: <%= user.role %>
  <br />
  Administrator: <%= user.admin_role? %>
  <br />
  <% if current_user.is_admin? %>
    <%= user.hour_cost %>
    <%= render 'users/shared/options', user: user %>
  <% end %>
<% end %>
