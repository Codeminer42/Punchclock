%h2 Sign up
= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = render "users/shared/errors", messages: @user.errors.full_messages

  %div= f.label :name
  %div= f.text_field :name

  %div
    = f.fields_for :company do |ff|
      %div= ff.label 'Company'
      %div= ff.text_field :name

  %div= f.label :email
  %div= f.email_field :email

  %div= f.label :password
  %div= f.password_field :password

  %div= f.label :password_confirmation
  %div= f.password_field :password_confirmation

  %div= f.submit "Register"
= render "users/shared/links"