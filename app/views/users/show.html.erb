<h2><%= @user.name %></h2>
<div>
<%= gravatar_for @user, size: 100 %>

<p>
  <div>
    <p>
      Email: <%= mail_to @user.email %>
    </p>
    <% if current_user.is_admin? %>
      <p>
        <%= @user.hour_cost %>
      </p>
    <% end %>
  </div>

  <div>
    <p>
      Administrator: <%= @user.admin_role? %>
    </p>
  </div>

  <div>
    <p>
      Role: <%= @user.role %>
    </p>
  </div>
</p>

</div>

