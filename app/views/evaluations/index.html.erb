<p class="main-actions">
  <%= link_to t('.add_review'), new_evaluation_path, :class => 'button' %>
</p>

<table class='table-minimal'>
  <thead>
    <tr>
      <th><%= t(:user) %></th>
      <th><%= t(:created_at) %></th>
      <th><%= t(:updated_at) %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @evaluations.each do |evaluation| %>
      <tr>
        <td><%= link_to evaluation.user.name, evaluation_path(evaluation) %> </td>
        <td><%= l evaluation.created_at, format: :long %></td>
        <td><%= l evaluation.updated_at, format: :long %></td>
        <td><%= link_to image_tag('edit.png'), edit_evaluation_path(evaluation), id: "edt-#{evaluation.id}" %> </td>
      </tr>
    <% end %>
  </tbody>
</table>
