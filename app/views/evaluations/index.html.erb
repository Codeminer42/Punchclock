<%= render 'header', evaluation_kind: @evaluation_kind %>

<table class='table-minimal'>
  <thead>
    <tr>
      <% if Evaluation.written?(@evaluation_kind) %>
        <th><%= t(:evaluated) %></th>
      <% else %>
        <th><%= t(:reviewer) %></th>
      <% end %>
      <th><%= t(:created_at) %></th>
      <th><%= t(:updated_at) %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @evaluations.each do |evaluation| %>
      <tr>
        <td><%= link_to evaluation.user.name, show_evaluation_path(@evaluation_kind, evaluation) %> </td>
        <td><%= l evaluation.created_at, format: :long %></td>
        <td><%= l evaluation.updated_at, format: :long %></td>
        <% if Evaluation.written?(@evaluation_kind) %>
          <td><%= link_to image_tag('edit.png'), edit_evaluation_path(evaluation), id: "edt-#{evaluation.id}" %> </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
