<div class="container-fluid evaluation">
  <div class="alert alert-info" role="alert">
    After confirmation the evaluation can no longer be changed.
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <div class="card mb-3">
    <div class="card-header">
      <h6>
        <%= @questionnaire.title %>
      </h6>
      <b>
        Evaluating:
        <%= @evaluation.evaluated %>
      </b>
    </div>
      <div class="card-body">
        <div class="evaluation-info">
          <b>
            Evaluated by:
            <%= current_user.name %>
          </b>
        </div>

        <p class="card-text">
          <%= @questionnaire.description %>
        </p>

        <div class="card questions" >
          <div class="card-body">
            <% @evaluation.answers.each do | answer | %>
              <div class="answer">
                <h5> <%= answer.question.title %> </h5>
                <h6> <%= answer.response %> </h6>
              </div>
              <hr>
            <% end %>
          </div>
        </div>

        <div class="card mb-2">
          <div class="card-body">
            <h5>Observation</h5>
            <p><%= @evaluation.observation %></p>
          </div>
        </div>

        <div class="card mb-2">
          <div class="card-body">
            <h5>Evaluation Date</h5>
            <p><%= @evaluation.evaluation_date %></p>
          </div>
        </div>

        <div class="card mb-2">
          <div class="card-body">
            <h5>Score</h5>
            <p><%= @evaluation.score %></p>
          </div>
        </div>

        <% if @evaluation.english? %>
          <div class="card mb-2">
            <div class="card-body">
              <h5>English Level</h5>
              <p><%= @evaluation.english_level %></p>
            </div>
          </div>
        <% end %>

        <div class="text-right">
          <%= link_to 'Edit', new_questionnaire_evaluation_path(@questionnaire.id), class: 'btn btn-secondary' %>
          <%= link_to 'Confirm', questionnaire_evaluations_path(@questionnaire.id), method: :post, class: 'btn btn-primary' %>
        </div>
      </div>
    <div class="card-footer small text-muted"></div>
  </div>
</div>
