# editorconfig.org
root = true

[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.rb]
indent_style = space
indent_size = 2

[*.coffee]
indent_style = space
indent_size = 2

[*.html.erb]
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2

[Gemfile]
indent_style = space
indent_size = 2